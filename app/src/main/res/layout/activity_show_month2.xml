<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".Show_Month2">


    <TextView
        android:id="@+id/tvSeeMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSeeMonth"
        android:layout_marginTop="20dp"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcSeeDayMonth"
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_height="350dp"></androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>





    <TextView
        android:id="@+id/textStringResulit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_textMonth"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStringResulit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="18dp"

        android:layout_marginTop="30dp"/>





</RelativeLayout>